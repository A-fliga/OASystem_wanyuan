<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deal_with_option_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/item_deal_option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_deal_option_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_deal_option_name"
            android:layout_marginTop="3dp"
            android:textSize="14sp" />

        <View
            android:layout_marginTop="2dp"
            android:layout_below="@+id/item_deal_option_flow"
            android:background="@color/color_c0c0c0"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>

       <LinearLayout
           android:visibility="gone"
           android:gravity="center_vertical"
           android:id="@+id/item_deal_option_ll"
           android:layout_alignParentEnd="true"
           android:orientation="horizontal"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content">

           <TextView
               android:textColor="@color/color_5d89ea"
               android:id="@+id/item_option_change"
               android:text="修改"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"/>
           <TextView
               android:textColor="@color/color_5d89ea"
               android:layout_marginStart="6dp"
               android:text="|"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"/>
           <TextView
               android:textColor="@color/color_5d89ea"
               android:id="@+id/item_option_delete"
               android:layout_marginStart="6dp"
               android:text="删除"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"/>

           </LinearLayout>

        <TextView
            android:id="@+id/item_deal_option_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/item_deal_option_ll"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/item_option_content"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</LinearLayout>