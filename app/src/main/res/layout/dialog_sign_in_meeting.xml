<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/meeting_sign_in_buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/meeting_sign_in_agree"
            android:buttonTint="@color/color_000000"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意准时参加会议" />

        <RadioButton
            android:id="@+id/meeting_sign_in_refuse"
            android:buttonTint="@color/color_000000"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="无法准时参加会议" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="备注："
        android:textColor="@color/color_000000"
        android:textSize="16sp" />

    <EditText
        android:gravity="top|left"
        android:textColor="@color/color_000000"
        android:id="@+id/meeting_sign_in_et"
        style="@style/MyEditText1"
        android:hint="您的备注信息"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:clickable="true"
            android:id="@+id/meeting_sign_in_commit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/meeting_sign_in_commit" />

        <ImageView
            android:clickable="true"
            android:id="@+id/meeting_sign_in_close"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/meeting_sign_in_close" />
    </LinearLayout>
</LinearLayout>