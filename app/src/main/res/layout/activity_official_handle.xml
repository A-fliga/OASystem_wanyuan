<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_f5f5f5"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="待审批事项"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/to_sort_create"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="刷新" />

        <TextView
            android:id="@+id/to_sort_create"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/to_sort_update"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="发文" />

        <TextView
            android:id="@+id/to_sort_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/to_screen"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="操作" />


        <ImageView
            android:id="@+id/to_screen"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="50px"
            android:clickable="true"
            android:src="@mipmap/screen"
            android:visibility="visible" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/official_not_done_tab"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/not_read_selected" />


        <ImageView
            android:id="@+id/official_done_tab"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/official_not_done_tab"
            android:src="@mipmap/read_normal" />
    </RelativeLayout>

    <org.oasystem_wanyuan.mvp.view.customView.NoScrollViewPager
        android:id="@+id/bottom_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />
</LinearLayout>