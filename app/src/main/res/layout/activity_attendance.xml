<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/kaoqin_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/kaoqin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="23dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sign_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/sign_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="71dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/kaoqinjilu" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="420dp"
            android:layout_below="@+id/kaoqin_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@mipmap/kaoqin_background_small"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="23dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/sign_morning" />

                <TextView
                    android:id="@+id/sign_working_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="上班打卡"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sign_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/sign_regular"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/zhengchang"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sign_late"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/chidao"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/sign_after" />

                <TextView
                    android:id="@+id/sign_work_off_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="下班打卡"
                    android:textColor="#424242"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sign_off_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/sign_regular_off"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/zhengchang"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sign_leave"
                    android:layout_width="45dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/zaotui"
                    android:visibility="gone" />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp">

                <ImageView
                    android:id="@+id/to_sign_in"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@mipmap/sign_in" />

                <TextView
                    android:id="@+id/sign_in_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>