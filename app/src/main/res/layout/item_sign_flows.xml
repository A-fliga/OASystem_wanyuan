<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/sign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp" />

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="15dp"
            android:id="@+id/sign_flows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sign_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sign_status_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/not_sign" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/sign_line_img"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sign_status_img"
            android:src="@mipmap/sign_gray_line" />
    </RelativeLayout>
</LinearLayout>