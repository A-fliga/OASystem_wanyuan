<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_screen"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_screen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/screen_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="19dp"
            android:text="类型"
            android:textColor="#898989"
            android:textSize="11sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/screen_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

        <View
            android:id="@+id/screen_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="日期"
                android:textSize="11sp" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/s_date"
                android:layout_width="98dp"
                android:layout_height="24dp"
                android:background="@drawable/et"
                android:clickable="true"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="——" />

            <TextView
                android:textSize="10sp"
                android:id="@+id/e_date"
                android:layout_width="98dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/et"
                android:clickable="true"
                android:gravity="center" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来文机关"
                android:textColor="#898989"
                android:textSize="11sp" />

            <EditText
                android:textSize="10sp"
                android:id="@+id/office_organ"
                android:layout_width="230dp"
                android:layout_height="24dp"
                android:background="@drawable/et"
                android:clickable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="文件名称"
                android:textColor="#898989"
                android:textSize="11sp" />

            <EditText
                android:textSize="10sp"
                android:id="@+id/office_name"
                android:layout_width="230dp"
                android:layout_height="24dp"
                android:background="@drawable/et"
                android:clickable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="文件文号"
                android:textColor="#898989"
                android:textSize="11sp" />

            <EditText
                android:textSize="10sp"
                android:id="@+id/office_serial"
                android:layout_width="230dp"
                android:layout_height="24dp"
                android:background="@drawable/et"
                android:clickable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="文件编号"
                android:textColor="#898989"
                android:textSize="11sp" />

            <EditText
                android:textSize="10sp"
                android:id="@+id/office_number"
                android:layout_width="230dp"
                android:layout_height="24dp"
                android:background="@drawable/et"
                android:clickable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_f5f5f5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f5f5f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/screen_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="重置"
                android:textSize="15sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/color_f5f5f5" />

            <TextView
                android:id="@+id/screen_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/color_E4393C"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_f5f5f5" />
    </LinearLayout>

</RelativeLayout>