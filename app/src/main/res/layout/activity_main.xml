<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <org.oasystem_dazhu.mvp.view.customView.NoScrollViewPager
        android:id="@+id/content_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_official_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_official_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/official_selector" />

            <TextView
                android:id="@+id/home_official_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="办公中心"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_mine_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_user_img"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:scaleType="centerInside"
                android:src="@drawable/mine_selector" />

            <TextView
                android:id="@+id/home_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="个人中心"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
