<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/login_top_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@mipmap/login_top_img" />

    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="265dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="170dp"
        android:background="@mipmap/login_back"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="修改密码"
            android:textColor="@color/color_e6121e"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/source_password"
                style="@style/MyEditText"
                android:hint="原密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/color_727171" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/new_password"
                style="@style/MyEditText"
                android:hint="新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/color_727171" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="217dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/new_password_two"
                style="@style/MyEditText"
                android:hint="再输入新密码"
                android:inputType="textPassword"
                android:maxLines="1" />
        </LinearLayout>


        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/sure_btn"
            android:layout_width="217dp"
            android:layout_height="33dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/login_btn">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/color_ffffff"
                android:textSize="12sp" />
        </FrameLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:text="技术支持：成都万众新业科技有限公司"
        android:textColor="#b5b5b6"
        android:textSize="8sp" />


</FrameLayout>