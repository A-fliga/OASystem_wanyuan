<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/color_e94a2d"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_top_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/login_top_wanyuan" />
    </LinearLayout>

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="807px"
        android:layout_height="847px"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@mipmap/login_back"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/login_username" />

            <EditText
                android:id="@+id/source_password"
                style="@style/MyEditText"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:hint="原密码"
                android:maxLines="1"
                android:textSize="40px" />
        </LinearLayout>

        <View
            android:layout_width="600px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:background="@color/color_f5f5f5" />


        <LinearLayout
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="2px"
                android:src="@mipmap/login_password" />

            <EditText
                android:id="@+id/new_password"
                style="@style/MyEditText"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:hint="新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="40px" />
        </LinearLayout>
        <View
            android:layout_width="600px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:background="@color/color_f5f5f5" />

        <LinearLayout
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="2px"
                android:src="@mipmap/login_password" />

            <EditText
                android:id="@+id/new_password_two"
                style="@style/MyEditText"
                android:layout_marginLeft="60px"
                android:background="@null"
                android:hint="再输入新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="40px" />
        </LinearLayout>

        <View
            android:layout_width="600px"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:background="@color/color_f5f5f5" />

        <FrameLayout
            android:id="@+id/sure_btn"
            android:layout_width="625px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90px"
            android:clickable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/change_pwd_btn" />

            <TextView
                android:textColor="@color/color_ffffff"
                android:layout_gravity="center"
                android:text="确定"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>